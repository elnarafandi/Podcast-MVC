@model ForgotPasswordVM


<main>
    <section id="forgot-password" class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm p-4 rounded">
                        <h3 class="text-center mb-4">Forgot your password?</h3>
                        <form method="post" asp-action="ForgotPassword">
                            <div class="mb-3">
                                <label for="Email" class="form-label">Enter your email</label>
                                <input type="text" asp-for="Email" class="form-control" id="Email" placeholder="Your email address">
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <div class="invalid-feedback">
                                    Please provide a valid email address.
                                </div>
                            </div>
                            <!-- Custom Button -->
                            <button type="submit" class="btn custom-btn w-100">Send Reset Link</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<style>
    /* Custom Button Styling */
    .custom-btn {
        background-color: #C084FC; /* Rənginizi burada təyin edin */
        color: white;
        border: none;
        padding: 10px;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .custom-btn:hover {
            background-color: #9b63e6; /* Hover effekti */
            cursor: pointer;
        }

        .custom-btn:focus {
            outline: none;
            box-shadow: 0 0 0 2px rgba(192, 132, 252, 0.5); /* Fokusda parlayan effekti */
        }
</style>
