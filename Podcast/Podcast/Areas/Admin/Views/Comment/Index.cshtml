@model IEnumerable<CommentAdminVM>



<div class="container-fluid py-4">
    <!-- DataTales Example -->
    <div class="card shadow-sm mb-4 border-0 rounded-3">
        <div class="card-header bg-primary text-white py-3 rounded-top">
            <h5 class="m-0 font-weight-bold">Podcasts</h5>
        </div>
        <div class="card-body">
            

            <div class="table-responsive">
                <table class="table table-hover align-middle" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-light text-secondary">
                        <tr>
                            <th scope="col">Content</th>
                            <th scope="col">User</th>
                            <th scope="col">Podcast</th>
                            <th scope="col" style="width: 180px;">Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="align-middle">
                                
                                <td class="fw-semibold">@item.Content</td>
                                <td class="fw-semibold">@item.AppUser.Email</td>
                                <td class="fw-semibold">@item.Podcast.Title</td>
                                <td>
                                    <form asp-action="Delete" method="post" asp-route-id="@item.Id" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm shadow-sm" title="Delete Podcast">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
