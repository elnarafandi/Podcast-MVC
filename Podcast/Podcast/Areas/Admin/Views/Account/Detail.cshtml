@model UserRolesVM

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">User Detail</h5>
        </div>

        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="~/assets/images/home/@Model.Image" alt="User Image" class="img-fluid rounded-circle shadow-sm" style="width: 150px; height: 150px; object-fit: cover;">
                    }
                    else
                    {
                        <img class="img-fluid rounded-circle shadow-sm" style="width: 150px; height: 150px; object-fit: cover; background-color: #C084FC">
                    }
                    <h5 class="mt-3">@Model.FirstName @Model.LastName</h5>
                    <span class="badge bg-light text-dark border border-secondary">@Model.Username</span>
                </div>

                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Package:</dt>
                        @if (Model.PackageId == 3)
                        {
                            <dd class="col-sm-8">Premium Package</dd>
                        }
                        else if(Model.PackageId == 4){
                            <dd class="col-sm-8">Default Package</dd>
                        }
                        

                        <dt class="col-sm-4">Roles:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Roles != null && Model.Roles.Any())
                            {
                                @foreach (var role in Model.Roles)
                                {
                                    <span class="badge bg-info text-dark me-1">@role</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">No roles assigned</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        
    </div>
</div>

