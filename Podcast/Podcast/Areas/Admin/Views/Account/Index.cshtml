@model IEnumerable<UserRolesVM>

@{
    
    var adminCount = Model.Count(u => u.Roles.Contains("Admin"));
}

<div class="container-fluid py-4">
    <!-- DataTales Example -->
    <div class="card shadow-sm mb-4 border-0 rounded-3">
        <div class="card-header bg-primary text-white py-3 rounded-top">
            <h5 class="m-0 font-weight-bold">Team Members</h5>
        </div>
        <div class="card-body">
            

            <div class="table-responsive">
                <table class="table table-hover align-middle" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-light text-secondary">
                        <tr>
                            <th scope="col">FullName</th>
                            <th scope="col">Email</th>
                            <th scope="col">Roles</th>
                            <th scope="col" style="width: 180px;">Options</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr class="align-middle">
                                <td class="fw-semibold">@item.FirstName @item.LastName</td>
                                <td class="fw-semibold">@item.Email</td>
                                <td>@string.Join(", ", item.Roles)</td>
                                <td>
                                    @if (!item.Roles.Contains("Admin"))
                                    {
                                        <form asp-action="MakeAdmin" method="post" asp-route-id="@item.Id" class="d-inline">
                                            <button type="submit" class="btn btn-warning btn-sm me-2 shadow-sm" title="Make Admin">
                                                <i class="bi bi-shield-lock"></i> Make Admin
                                            </button>
                                        </form>
                                        <form asp-action="Delete" method="post" asp-route-id="@item.Id" class="d-inline">
                                            <button type="submit" class="btn btn-danger btn-sm shadow-sm" title="Delete Team Member">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        
                                        if (adminCount > 1)
                                        {
                                            <form asp-action="RemoveAdmin" method="post" asp-route-id="@item.Id" class="d-inline">
                                                <button type="submit" class="btn btn-secondary btn-sm me-2 shadow-sm" title="Remove Admin Role">
                                                    <i class="bi bi-shield-slash"></i> Delete Role
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="text-muted small fst-italic">Primary Admin – cannot remove</span>
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>