@model IEnumerable<PackageAdminVM>


<div class="container-fluid py-4">
    <!-- DataTales Example -->
    <div class="card shadow-sm mb-4 border-0 rounded-3">
        <div class="card-header bg-primary text-white py-3 rounded-top">
            <h5 class="m-0 font-weight-bold">Packages</h5>
        </div>
        <div class="card-body">
            

            <div class="table-responsive">
                <table class="table table-hover align-middle" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-light text-secondary">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col" style="width: 180px;">Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        @foreach(var item in Model)
                        {
                            <tr class="align-middle">
                                <td class="fw-semibold">@item.Name</td>
                                <td class="fw-semibold">@item.Price</td>
                                <td>
                                    @if(item.Id==3){
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm me-2 shadow-sm" title="Edit Guest">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

