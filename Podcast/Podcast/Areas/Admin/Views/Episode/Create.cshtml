@model EpisodeCreateVM


<div class="container d-flex justify-content-center pt-5">
    <div class="card shadow-lg border-0 rounded-4 p-4 mt-4" style="max-width: 600px; width: 100%;">
        <div class="card-body">
            <h4 class="card-title text-center mb-4 text-primary">Create Podcast Episode</h4>

            <form method="post" asp-action="Create" enctype="multipart/form-data">

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold">Title</label>
                    <input asp-for="Title" class="form-control rounded-3" placeholder="Enter episode title">
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold">Description</label>
                    <input asp-for="Description" class="form-control rounded-3" placeholder="Enter episode description">
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UploadImage" class="form-label fw-semibold">Cover Image</label>
                    <input asp-for="UploadImage" type="file" class="form-control rounded-3">
                    <span asp-validation-for="UploadImage" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AudioFile" class="form-label fw-semibold">Audio File</label>
                    <input asp-for="AudioFile" type="file" class="form-control rounded-3">
                    <span asp-validation-for="AudioFile" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PodcastId" class="form-label fw-semibold">Podcast</label>
                    <select asp-for="PodcastId" class="form-control" asp-items="ViewBag.Podcasts">
                        <option disabled selected value="">Please select a podcast</option>
                    </select>
                    <span asp-validation-for="PodcastId" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="GuestIds" class="form-label fw-semibold">Guests</label>
                    <select asp-for="GuestIds" class="form-control" asp-items="ViewBag.Guests" multiple="multiple">
                        <option disabled value="">Please select guests</option>
                    </select>
                    <span asp-validation-for="GuestIds" class="text-danger small"></span>
                </div>

                <div class="row mt-4">
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary w-100 rounded-pill shadow-sm">
                            <i class="bi bi-check-circle me-1"></i> Submit
                        </button>
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-outline-secondary w-100 rounded-pill shadow-sm">
                            <i class="bi bi-x-circle me-1"></i> Cancel
                        </a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
